
git clone https://github.com/vim/vim.git

./configure --with-features=huge \
            --enable-multibyte \
	          --enable-pythoninterp \
            --with-python-config-dir=/usr/lib64/python2.7/config \
            --enable-python3interp \
            --with-python3-config-dir=/usr/lib64/python3.4/config-3.4m \
            --enable-luainterp \
            --enable-gui=gtk2 \
            --enable-cscope \
            --prefix=/usr/local

make && make install
